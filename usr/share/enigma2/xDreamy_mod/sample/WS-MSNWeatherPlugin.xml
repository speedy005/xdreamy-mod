<screen name="Weather_infobar">
    <!-- Weather infobar -->
    <widget source="session.MSNWeather" render="Label" position="275,0" size="150,60" font="Regular; 46" text="54 `C" valign="center" halign="left" foregroundColor="green" backgroundColor="header" noWrap="1" borderWidth="1" transparent="1" zPosition="10">
        <convert type="MSNWeather">temperature_current</convert>
    </widget>
    <widget source="session.MSNWeather" render="Label" position="275,130" size="250,30" font="Regular; 24" halign="left" foregroundColor="yellow" backgroundColor="back" noWrap="1" typeSpeed="1500" typeCaret="_" zPosition="10" transparent="1">
