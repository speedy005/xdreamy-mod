    </widget>
    <widget alphatest="blend" render="MSNWeatherPixmap" position="0,0" size="220,220" source="session.MSNWeather" transparent="1" zPosition="1" scale="1">
        <convert type="MSNWeather">weathericon,current,/usr/share/enigma2/xDreamy_mod/weather_icons/,png</convert>
    </widget>
    <widget source="session.MSNWeather" render="Label" position="275,100" size="250,30" font="Regular; 24" halign="left" foregroundColor="white" backgroundColor="header" transparent="1" zPosition="1">
        <convert type="MSNWeather">temperature_heigh_low,day1</convert>
    </widget>
    <widget source="session.MSNWeather" render="Label" position="275,60" size="250,40" font="Regular; 30" halign="left" foregroundColor="ltbluette" backgroundColor="header" noWrap="1" typeSpeed="1500" typeCaret="_" zPosition="1" transparent="1" borderWidth="2">
        <convert type="MSNWeather">city</convert>
    </widget>
</screen>
